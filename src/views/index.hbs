<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="far fa-image"></i> Upload an Image
    </h3>
  </div>
  <div class="card-body">
    <form action="/images" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <div class="custom-file">
          <input type="file" name="image" class="custom-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon" required>
          <label for="inputGroupFile" class="custom-file-label">Chose you'r File</label>
        </div>
      </div>
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title for the Image" required>
      </div>
      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Description for the Image" required></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success"><i class="fa fa-upload"></i> Upload Image</button>
      </div>
    </form>
  </div>
</div>